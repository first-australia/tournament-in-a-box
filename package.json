{
  "name": "Tournament-in-a-Box",
  "main": "public/electron.js",
  "author": {
    "name": "Fred Westling",
    "email": "fred@firstaustralia.org"
  },
  "license": "MIT",
  "description": "Everything you need to run a FIRST LEGO League tournament, in one convenient location!",
  "version": "19.0.1",
  "private": true,
  "devDependencies": {
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.10",
    "concurrently": "^4.1.0",
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "bootstrap": "^4.1.0",
    "electron-is-dev": "^1.1.0",
    "file-saver": "^2.0.1",
    "gh-pages": "^2.0.1",
    "jquery": "^3.4.1",
    "jszip": "^3.2.1",
    "pdfmake": "^0.1.36",
    "pptxgenjs": "^2.5.0",
    "react": "^16.3.1",
    "react-datasheet": "^1.3.4",
    "react-dom": "^16.3.1",
    "react-html-id": "^0.1.2",
    "react-icons": "^2.2.7",
    "react-popper": "^0.10.1",
    "react-scripts": "1.1.4",
    "react-toggle-button": "^2.2.0",
    "react-tooltip": "^3.8.4",
    "react-transition-group": "^2.3.0",
    "reactstrap": "^5.0.0-beta.3",
    "short-unique-id": "^1.1.1",
    "smalltalk": "^3.3.0",
    "webpack-dev-server": ">=3.1.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev-win": "concurrently \"set BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "build -wl"
  },
  "build": {
    "appId": "com.fwestling.electron-first",
    "asar": true,
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "NSIS",
        "portable"
      ],
      "icon": "build/icon.ico"
    }
  },
  "homepage": "./"
}
